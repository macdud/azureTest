@using TravelAssistant.Models;

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<style>
    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding: 0;
        padding-top: 50px;  /*Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height:100%;
        margin: 0;

        overflow: hidden; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content */
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 95%;
        height: 100%;
        min-height: 100%;
        border-radius: 0;
    }

    .modalText {
        padding: 0;
        margin:0;

        width: 100%;
        height: 100%;
        min-height: 100%;
        border-radius: 0;
    }
    iframe{
    overflow:hidden;
}
    /* The Close Button */
    .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">×</span>
        <div id="modalText" class="modalText"></div>
    </div>

</div>

<script>
    // Get the modal
    var modal = document.getElementById('myModal');

    var modalText = document.getElementById("modalText");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

    var openModal = function(url)
    {
        modalText.innerHTML = "<iframe src='" + url + "' style='min-height:100%;height:100%;width:100%;' scrolling='yes' seamless='seamless'></iframe>";
        modal.style.display = "block";
        // When the user clicks the button, open the modal

    };


</script>



    @if (Model != null && Model.events != null)
    {
        foreach (var e in Model.events)
        {
            if (e != null)
            {
                <div class="row">
                    <div class="col-md-12">

                        <a href="@e.url">@Html.Raw(e.name.html)</a>

                        @if (e.logo != null && e.logo.url != null)
                        {
                            <img src="@e.logo.url" />
                        }

                        @*<p>@Html.Raw(e.description.html)</p>*@

                            @*<iframe src="@e.url" width="100%" height="100%"></iframe>*@

                        <button id="myBtn" onclick="openModal('@e.url')">Book</button>
                        </div>

                    </div>
            }
        }
    }
